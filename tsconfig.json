{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./assets/*"],
      "@lib/*": ["lib/*"],
      "@root/*": ["./*"],
      "@common/*": ["./common/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/**/*",
    "lib/**/*",
    "custom.d.ts",
    "App.tsx",
    "tests/**/*",
    "metro.config.js",
    "common/**/*"
  ],
  "exclude": ["node_modules", ".expo", "dist"]
}
